{
    "configurations": [
        {
            "name": "Emscripten",
            "includePath": [
                "${workspaceFolder}/headers/**",
                "${workspaceFolder}/OpenSiv3D/include",
                "${workspaceFolder}/OpenSiv3D/include/ThirdParty",
                "${env:EMSDK}/upstream/emscripten/system/include",
                "${env:EMSDK}/upstream/emscripten/system/include/libc",
                "${env:EMSDK}/upstream/emscripten/system/include/libcxx",
                "${env:EMSDK}/upstream/emscripten/system/include/compat",
                "${env:EMSDK}/upstream/emscripten/system/lib/libcxxabi/include",
                "${env:EMSDK}/upstream/emscripten/system/lib/libc/musl/arch/emscripten"
            ],
            "defines": [
                "_DEBUG",
                "EMSCRIPTEN",
                "__EMSCRIPTEN__"
            ],
            "cStandard": "c11",
            "cppStandard": "c++17",
            "compilerPath": "${env:EMSDK}/upstream/emscripten/em++.bat",
            "intelliSenseMode": "clang-x86"
        }
    ],
    "version": 4
}